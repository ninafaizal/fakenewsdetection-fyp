    <div class="container">
        <header class="header">
            <h1>Fake News Detection</h1>
        </header>
        <div class="main-content">
            <div class="input-area">
                <form id="newsForm">
                    <textarea class="input-text" name="article" placeholder="Enter or paste news text here and press 'Detect News'"></textarea>
                    <div class="button-group">
                        <button type="submit" class="detect-button">Detect News</button>
                        <input type="file" class="upload-button" accept=".txt" id="fileInput">
                    </div>
                </form>
            </div>
            <div class="analysis-section">
                <div id="resultsContainer">
                    <div class="result-entry">
                        <div class="result-box">
                            <p class="result-text">Result: </p>
                            <p class="probability-real">Probability of being Real News: </p>
                            <p class="probability-fake">Probability of being Fake News: </p>
                        </div>
                    </div>
                </div>
                <div class="analysis-box">
                    <h2>Detailed Analysis</h2>
                    <iframe id="explanationFrame"></iframe>
                    <div id="explanation">
                        <!-- Loading spinner will be displayed here -->
                        <div id="loadingSpinner" class="loading-spinner" style="display: none;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
    document.getElementById('fileInput').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.querySelector('.input-text').value = e.target.result;
            };
            reader.readAsText(file);
        }
    });

    document.getElementById('newsForm').addEventListener('submit', function(event) {
        event.preventDefault();
        const formData = new FormData(event.target);
        const detectButton = document.querySelector('.detect-button');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const resultText = document.querySelector('.result-text');
        const probabilityReal = document.querySelector('.probability-real');
        const probabilityFake = document.querySelector('.probability-fake');
        const explanationFrame = document.getElementById('explanationFrame');

        detectButton.disabled = true;
        detectButton.textContent = 'Detecting...';
        loadingSpinner.style.display = 'inline-block';

        fetch('/predict', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            resultText.textContent = `Result: ${data.prediction}`;
            probabilityReal.textContent = `Probability of being Real News: ${data.probability_real.toFixed(2)}`;
            probabilityFake.textContent = `Probability of being Fake News: ${data.probability_fake.toFixed(2)}`;
            const iframeDoc = explanationFrame.contentDocument || explanationFrame.contentWindow.document;
            iframeDoc.open();
            iframeDoc.write(data.explanation);
            iframeDoc.close();

            detectButton.disabled = false;
            detectButton.textContent = 'Detect News';
            loadingSpinner.style.display = 'none';
        })
        .catch(error => {
            console.error('Error:', error);
            detectButton.disabled = false;
            detectButton.textContent = 'Detect News';
            loadingSpinner.style.display = 'none';
        });
    });
    </script>
</body>
